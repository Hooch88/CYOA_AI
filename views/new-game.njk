<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | default('Start New Game') }}</title>
    <link rel="stylesheet" href="/css/main.css">
    <style>
        /* Page-specific overlay + spinner */
        .overlay-backdrop { position: fixed; inset: 0; background: rgba(0,0,0,0.55); display: none; align-items: center; justify-content: center; z-index: 2000; }
        .overlay-backdrop.show { display: flex; }
        .spinner { width: 56px; height: 56px; border: 6px solid rgba(255,255,255,0.25); border-top-color: #fff; border-radius: 50%; animation: spin 1s linear infinite; }
        @keyframes spin { to { transform: rotate(360deg); } }
        .overlay-text { color: #fff; margin-top: 12px; font-weight: bold; text-align: center; }
        .overlay-content { display: flex; flex-direction: column; align-items: center; }
        .page-section { background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px); box-shadow: 0 8px 32px rgba(0,0,0,0.1); padding: 20px; border-radius: 15px; margin: 20px; color: #fff; }
    </style>
    <script>
        // Prevent accidental navigation during submission
        window.disableNavigationGuard = function(enable) {
            if (enable) {
                window.onbeforeunload = () => 'A new game is being created.';
            } else {
                window.onbeforeunload = null;
            }
        }
    </script>
    <script defer src="/js/new-game.js"></script>
    <meta name="robots" content="noindex, nofollow">
    <link rel="icon" href="data:,">
    <style>
        body.new-game-page { overflow: auto; }
        body.new-game-page .container { overflow-y: auto; }
        body.new-game-page .main-content { overflow-y: auto; }
    </style>
    {% set currentPage = currentPage or 'new-game' %}
    {% set pageTitle = 'Start New Game' %}
    {% set pageDescription = 'Create a new adventure with your character details and starting location.' %}
    {% set headingIcon = 'üÜï' %}
    {% set submitIcon = 'üéÆ' %}
    {% set backIcon = '‚Ü©Ô∏è' %}
    {% set inputPlaceholderName = 'Adventurer' %}
    {% set inputPlaceholderDesc = 'A brave soul embarking on a new adventure.' %}
    {% set inputPlaceholderLoc = 'village, forest edge, harbor, etc.' %}
    {% set submitLabel = 'Start New Game' %}
    {% set cancelLabel = 'Back to Chat' %}
    {% set helpName = 'Optional. Defaults to Adventurer.' %}
    {% set helpDesc = 'Optional. A sentence or two describing your character.' %}
    {% set helpLoc = 'Optional. Influences the generated starting area.' %}
    {% set ariaBusy = 'Starting new game, please wait' %}
    {% set ariaForm = 'New game form' %}
{% set defaults = newGameDefaults or {} %}
{% set defaultPlayerName = defaults.playerName | default('') %}
{% set defaultPlayerDescription = defaults.playerDescription | default('') %}
{% set defaultStartingLocation = defaults.startingLocation | default('') %}
{% set defaultNumSkills = defaults.numSkills | default(20) %}
{% set defaultStartingCurrency = defaults.startingCurrency | default(0) %}
    {% set defaultExistingSkills = (defaults.existingSkills or []) | join('\n') %}
    {% set availableClasses = defaults.availableClasses or [] %}
    {% set availableRaces = defaults.availableRaces or [] %}
    {% set defaultPlayerClass = defaults.playerClass | default('') %}
    {% set defaultPlayerRace = defaults.playerRace | default('') %}
    {% set classInOptions = defaultPlayerClass and (defaultPlayerClass in availableClasses) %}
    {% set raceInOptions = defaultPlayerRace and (defaultPlayerRace in availableRaces) %}
    {% set classSelectValue = '' %}
    {% if classInOptions %}
        {% set classSelectValue = defaultPlayerClass %}
    {% elseif defaultPlayerClass %}
        {% set classSelectValue = '__other' %}
    {% elseif (availableClasses | length) == 0 %}
        {% set classSelectValue = '__other' %}
    {% endif %}
    {% set classOtherValue = '' %}
    {% if defaultPlayerClass and not classInOptions %}
        {% set classOtherValue = defaultPlayerClass %}
    {% endif %}
    {% set raceSelectValue = '' %}
    {% if raceInOptions %}
        {% set raceSelectValue = defaultPlayerRace %}
    {% elseif defaultPlayerRace %}
        {% set raceSelectValue = '__other' %}
    {% elseif (availableRaces | length) == 0 %}
        {% set raceSelectValue = '__other' %}
    {% endif %}
    {% set raceOtherValue = '' %}
    {% if defaultPlayerRace and not raceInOptions %}
        {% set raceOtherValue = defaultPlayerRace %}
    {% endif %}
</head>
<body class="new-game-page">
    <div class="container">
        <div class="header">
            <h1>{{ headingIcon }} Start a New Game</h1>
            <p>{{ pageDescription }}</p>
            {% include "_navigation.njk" %}
        </div>

        <div class="main-content">
            <div class="page-section" style="width:100%; max-width: 760px; margin: 20px auto;">
                <form id="newGameForm" aria-label="{{ ariaForm }}">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="playerName">Player Name</label>
                            <input type="text" id="playerName" name="playerName" placeholder="{{ inputPlaceholderName }}" autocomplete="name" value="{{ defaultPlayerName }}">
                            <div class="help-text">{{ helpName }}</div>
                        </div>

                        <div class="form-group full-width">
                            <label for="playerDescription">Player Description</label>
                            <textarea id="playerDescription" name="playerDescription" rows="3" placeholder="{{ inputPlaceholderDesc }}">{{ defaultPlayerDescription }}</textarea>
                            <div class="help-text">{{ helpDesc }}</div>
                        </div>

                        <div class="form-group full-width">
                            <label for="playerClassSelect">Class</label>
                            <select id="playerClassSelect" name="playerClassSelect" data-other-input="playerClassOther">
                                <option value="">-- Select Class --</option>
                                {% for cls in availableClasses %}
                                    <option value="{{ cls }}" {% if cls == classSelectValue %}selected{% endif %}>{{ cls }}</option>
                                {% endfor %}
                                <option value="__other" {% if classSelectValue == '__other' %}selected{% endif %}>Other...</option>
                            </select>
                            <input type="text" id="playerClassOther" name="playerClassOther" value="{{ classOtherValue }}" placeholder="Custom class" style="display: none; margin-top: 0.5rem;">
                            <div class="help-text">Choose a class from the setting or provide your own.</div>
                        </div>

                        <div class="form-group full-width">
                            <label for="playerRaceSelect">Race</label>
                            <select id="playerRaceSelect" name="playerRaceSelect" data-other-input="playerRaceOther">
                                <option value="">-- Select Race --</option>
                                {% for race in availableRaces %}
                                    <option value="{{ race }}" {% if race == raceSelectValue %}selected{% endif %}>{{ race }}</option>
                                {% endfor %}
                                <option value="__other" {% if raceSelectValue == '__other' %}selected{% endif %}>Other...</option>
                            </select>
                            <input type="text" id="playerRaceOther" name="playerRaceOther" value="{{ raceOtherValue }}" placeholder="Custom race" style="display: none; margin-top: 0.5rem;">
                            <div class="help-text">Pick a race from the setting or enter a custom one.</div>
                        </div>

        <div class="form-group full-width">
            <label for="startingLocation">Starting Location</label>
            <input type="text" id="startingLocation" name="startingLocation" placeholder="{{ inputPlaceholderLoc }}" value="{{ defaultStartingLocation }}">
            <div class="help-text">{{ helpLoc }}</div>
        </div>

                        <div class="form-group">
                            <label for="startingCurrency">Starting Currency</label>
            <input type="number" id="startingCurrency" name="startingCurrency" min="0" value="{{ defaultStartingCurrency }}" data-default-value="{{ defaultStartingCurrency }}">
            <div class="help-text">Optional. How much money the player begins with.</div>
        </div>

                        <div class="form-group">
                            <label for="numSkills">Number of Skills</label>
                            <input type="number" id="numSkills" name="numSkills" value="{{ defaultNumSkills }}" min="0" max="100" data-default-value="{{ defaultNumSkills }}">
                            <div class="help-text">How many unique skills to generate (default 20).</div>
                        </div>

                        <div class="form-group full-width">
                            <label for="existingSkills">Existing Skills (one per line)</label>
                            <textarea id="existingSkills" name="existingSkills" rows="4" placeholder="Examples:\nSwordplay\nHerbal Lore\nArcane Theory">{{ defaultExistingSkills }}</textarea>
                            <div class="help-text">Optional. These skills will be added to your character before any new skills are generated.</div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" id="startBtn" class="btn btn-primary">{{ submitIcon }} {{ submitLabel }}</button>
                        <a class="btn btn-secondary" href="/">{{ backIcon }} {{ cancelLabel }}</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Overlay Spinner -->
    <div id="overlay" class="overlay-backdrop" aria-live="polite" aria-busy="false" aria-label="{{ ariaBusy }}">
        <div class="overlay-content">
            <div class="spinner" role="status" aria-hidden="true"></div>
            <div class="overlay-text">Creating your adventure...</div>
        </div>
    </div>
</body>
</html>
